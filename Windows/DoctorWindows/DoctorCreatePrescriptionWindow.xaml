<Window x:Class="SF_16_POP2020.Windows.DoctorWindows.DoctorCreatePrescriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SF_16_POP2020.Windows.DoctorWindows"
        mc:Ignorable="d"
        Title="DoctorCreatePrescriptionWindow" Height="450" Width="300">
    <Grid>
        <TextBox HorizontalAlignment="Center" Height="23" Margin="0,80,0,0" TextWrapping="Wrap" Text="{Binding Description, Mode=TwoWay}" VerticalAlignment="Top" Width="160"/>
        <Label Content="Description" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="10,379,0,0" VerticalAlignment="Top" Width="75" Click="Back_OnClick"/>
        <Button Content="Create" HorizontalAlignment="Right" Margin="0,379,33,0" VerticalAlignment="Top" Width="75" Click="Create_OnClick"/>
    </Grid>
</Window>
