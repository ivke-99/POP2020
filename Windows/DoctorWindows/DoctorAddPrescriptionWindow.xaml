<Window x:Class="SF_16_POP2020.Windows.DoctorWindows.DoctorAddPrescriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SF_16_POP2020.Windows.DoctorWindows"
        mc:Ignorable="d"
        Title="Doctor Add Prescription Window" Height="450" Width="300">
    <Grid>
        <ComboBox ItemsSource="{Binding Prescriptions}" SelectedItem="{Binding Prescription, Mode=TwoWay}" DisplayMemberPath="Description" HorizontalAlignment="Stretch" Margin="20,59,20,0" VerticalAlignment="Top" Width="Auto"/>
        <Label Content="Prescription" HorizontalAlignment="Center" Margin="0,28,0,0" VerticalAlignment="Top"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="20,382,0,0" VerticalAlignment="Top" Width="75" Click="Back_Click"/>
        <Button Content="Add" HorizontalAlignment="Right" Margin="0,382,20,0" VerticalAlignment="Top" Width="75" Click="Add_Click"/>
    </Grid>
</Window>
